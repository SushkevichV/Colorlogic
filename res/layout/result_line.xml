<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="5dp"
    android:weightSum="8">


    <ImageView
        android:id="@+id/attemptImageView1"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        app:srcCompat="@drawable/cristal_blue" />

    <ImageView
        android:id="@+id/attemptImageView2"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        app:srcCompat="@drawable/cristal_blue" />

    <ImageView
        android:id="@+id/attemptImageView3"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        app:srcCompat="@drawable/cristal_blue" />

    <ImageView
        android:id="@+id/attemptImageView4"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        app:srcCompat="@drawable/cristal_blue" />

    <ImageView
        android:id="@+id/emptyImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp" />

    <TableLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/result_image_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/cristal_quoter_white" />

            <ImageView
                android:id="@+id/result_image_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:rotationY="180"
                app:srcCompat="@drawable/cristal_quoter_white" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/result_image_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:rotationX="180"
                app:srcCompat="@drawable/cristal_quoter_white" />

            <ImageView
                android:id="@+id/result_image_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:rotation="180"
                app:srcCompat="@drawable/cristal_quoter_white" />

        </TableRow>

    </TableLayout>

</LinearLayout>